<!DOCTYPE html>
<html>
<head>
  <title>DOM Manipulation Example</title>
</head>
<body>
  <div id="itemLister">
    <ul id="items">
      <li>Item 1</li>
      <li>Item 2</li>
      <li>Item 3</li>
      <li>Item 4</li>
    </ul>
  </div>

  <script>
    // Add 'Hello' before Item Lister
    var itemLister = document.getElementById('itemLister');
    var helloText = document.createElement('p');
    helloText.textContent = 'Hello';
    itemLister.parentNode.insertBefore(helloText, itemLister);

    // Add 'Hello' before Item 1
    var item1 = document.querySelector('#items li:first-child');
    var helloText2 = document.createElement('span');
    helloText2.textContent = 'Hello';
    item1.parentNode.insertBefore(helloText2, item1);

    // Example of other DOM manipulation keywords you mentioned
    var lastElementChild = itemLister.lastElementChild;
    var lastChild = itemLister.lastChild;
    var createChild = document.createElement('div');
    var firstElementChild = itemLister.firstElementChild;
    var firstChild = itemLister.firstChild;
    var nextSibling = item1.nextSibling;
    var nextElementSibling = item1.nextElementSibling;
    var previousSibling = item1.previousSibling;
    var previousElementSibling = item1.previousElementSibling;
    var createElement = document.createElement('p');
    var setAttribute = createElement.setAttribute('id', 'newElement');
    var createTextNode = document.createTextNode('This is a new element');
    createElement.appendChild(createTextNode);

    // Append the created element to itemLister
    itemLister.appendChild(createElement);
  </script>
</body>
</html>
