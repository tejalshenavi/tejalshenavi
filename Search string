  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    // Remove item when delete button is clicked
    $(document).on('click', '.delete', function () {
      $(this).parent('li').remove();
    });

    // Filter items based on search string
    $('#filter').on('input', function () {
      var search = $(this).val().toLowerCase();
      $('#items li').each(function () {
        var itemName = $(this).text().toLowerCase();
        var itemDescription = $(this).find('.description').text().toLowerCase();
        if (itemName.includes(search) || itemDescription.includes(search)) {
          $(this).show();
        } else {
          $(this).hide();
        }
      });
    });

    // Add new item
    $('#addForm').submit(function (e) {
      e.preventDefault
