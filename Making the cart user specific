import React, { useState } from 'react';
import { useHistory } from 'react-router-dom';
import { useAuth } from './AuthContext';

const Login = () => {
  const [email, setEmail] = useState('');
  const [password, setPassword] = useState('');
  const [error, setError] = useState('');
  const { login } = useAuth();
  const history = useHistory();

  const handleLogin = async () => {
    setError('');

    try {
      const response = await fetch('https://identitytoolkit.googleapis.com/v1/accounts:signInWithPassword?key=YOUR_API_KEY', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          email,
          password,
          returnSecureToken: true,
        }),
      });

      const data = await response.json();

      if (!response.ok) {
        setError(data.error.message);
      } else {
        login(data.idToken);
        localStorage.setItem('userEmail', email); // Store user's email in localStorage
        history.push('/products'); // Redirect to products page on successful login
      }
    } catch (error) {
      setError('An error occurred. Please try again.');
    }
  };

  return (
    // Your login form JSX
  );
};

export default Login;



