const addToCart = async (product) => {
  const userEmail = localStorage.getItem('userEmail').replace(/[@.]/g, ''); // Remove '@' and '.'

  const response = await fetch(`https://crudcrud.com/api/your-api-key/cart${userEmail}`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify(product),
  });

  // ... Handle response
};




